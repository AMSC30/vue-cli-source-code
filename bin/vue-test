// example.js
const inquirer = require('inquirer')

/** 模拟一个网上订餐的过程 */
inquirer
    .prompt([
        {
            type: 'list',
            name: 'goods',
            message: '请选择商品',
            choices: [
                  1,
                  new inquirer.Separator(),
                '可乐',
                '雪碧',
                '橙汁'
            ],
        },
    ])
    .then(answer => {
        console.log('最终结果', answer)
    })
